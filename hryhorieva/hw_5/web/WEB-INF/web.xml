<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
           version="4.0">

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>filters.EncodingFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>RegistrationFilter</filter-name>
        <filter-class>filters.RegistrationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RegistrationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>ConfigListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Authorization</servlet-name>
        <servlet-class>servlets.AuthorizationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authorization</servlet-name>
        <url-pattern>/authorization</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddDocument</servlet-name>
        <servlet-class>servlets.AddDocumentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddDocument</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AllDocuments</servlet-name>
        <servlet-class>servlets.ShowDocumentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllDocuments</servlet-name>
        <url-pattern>/documents</url-pattern>
    </servlet-mapping>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

</web-app>
