<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
           version="4.0">

    <filter>
        <filter-name>RegistrationFilter</filter-name>
        <filter-class>filters.RegistrationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RegistrationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>servlets.Registration</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddDocument</servlet-name>
        <servlet-class>servlets.AddDocument</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddDocument</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AllDocuments</servlet-name>
        <servlet-class>servlets.ShowDocuments</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllDocuments</servlet-name>
        <url-pattern>/documents</url-pattern>
    </servlet-mapping>
</web-app>
